<div  class="container d-flex m-3 fadeEl">
  <div class="row">
    <div class="col-12 col-md-4 col-lg-4">
      <div class="container">
        <div class="form-group mr-4" id="form">
          <%= simple_form_for :contact, url: contacts_path do |f| %>
            <%= f.label :name %></br>
            <%= f.text_field  :name, required: true, class: "form-group contact-form-text-area" %></br>

            <%= f.label :email %></br>
            <%= f.text_field :email, required: true, class: "form-group contact-form-text-area" %></br>

            <%= f.label :message %></br>
            <%= f.text_area :message, rows: 8, cols: 35, required: true, class: "form-group contact-form-text-area",
                  placeholder: "Send me a message"%></br>

            <div class= "d-none">
              <%= f.label :nickname %>
              <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
            </div>

            <%= f.submit 'Send Message', class: 'button' %>
            <div class="loader">
              <div class="check">
                <span class="check-one"></span>
                <span class="check-two"></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
